# NextAuth.js Configuration
# Generate a secure secret using: openssl rand -base64 64
NEXTAUTH_SECRET=your-nextauth-secret-here

# Base URL for NextAuth callbacks (use your production domain in production)
NEXTAUTH_URL=http://localhost:3000

# Backend Microservices URLs
# Auth/Verification Service
VERIFY_API_URL=http://localhost:8082

# Parcel Service API
PARCEL_API_URL=http://localhost:8085/api/v1

# Payment Service API
PAYMENT_API_URL=http://localhost:8086/api/v1

# Driver Service API
DRIVER_API_URL=http://localhost:8084

# Stripe Configuration
# Get your publishable key from: https://dashboard.stripe.com/apikeys
# Use test key (pk_test_...) for development, live key (pk_live_...) for production
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# JWT Secret for Backend Microservices
# Should match the secret used by your backend services
# Generate using: openssl rand -base64 64
JWT_SECRET_KEY=your-jwt-secret-key-here

# CORS Configuration (Optional)
# Only needed if you have API endpoints that accept cross-origin requests.
# Auth endpoints (/api/register, /api/login) are same-origin and don't require CORS.
# In development mode, all origins are allowed by default.
# In production, set this to your domain(s) if you need cross-origin API access.
#
# Format: Comma-separated list of allowed origin URLs (no trailing slashes)
# Example for single domain: ALLOWED_ORIGINS=https://demo.tawsilgo.com
# Example for multiple domains: ALLOWED_ORIGINS=https://demo.tawsilgo.com,https://www.demo.tawsilgo.com
# ALLOWED_ORIGINS=http://localhost:3000

# Optional: Additional Configuration
# Add any other environment variables your backend services require
